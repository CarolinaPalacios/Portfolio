---
import ThemeIcon from "./ThemeIcon.astro";
---

<header
  class='py-3 px-10 flex items-center top-0 w-full justify-between z-40 h-8 lg:fixed lg:top-0 lg:backdrop-blur sm:py-6 text-gray-400' 
>
<div class="dark:text-blue-400 text-[#748c74]">
<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bug" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <path d="M9 9v-1a3 3 0 0 1 6 0v1"></path>
   <path d="M8 9h8a6 6 0 0 1 1 3v3a5 5 0 0 1 -10 0v-3a6 6 0 0 1 1 -3"></path>
   <path d="M3 13l4 0"></path>
   <path d="M17 13l4 0"></path>
   <path d="M12 20l0 -6"></path>
   <path d="M4 19l3.35 -2"></path>
   <path d="M20 19l-3.35 -2"></path>
   <path d="M4 7l3.75 2.4"></path>
   <path d="M20 7l-3.75 2.4"></path>
</svg>
</div>
</svg>
  <nav>
    <ul class='flex gap-4 ml-10'>
     {[
      ['Home', '/'],
      ['About', '/#about'],
      ['Projects', '/#projects'],
      ['Experience', '/#experience'],
      ['Contact', '/#contact'],
    ].map(([title, url]) => (
      <li class="dark:text-gray-400 dark:hover:text-white hover:text-black text-gray-700"><a href={url}>{title}</a>
      </li>
      ))
    }
    </ul>
  </nav>
  <nav>
    <ul class='flex gap-4'>
        {[
      ['Linkedin', 'https://www.linkedin.com/in/carolina-palacios-0723b726b/'],
      ['Github', 'https://github.com/CarolinaPalacios'],
    ].map(([title, url]) => (
      <li class="dark:text-gray-400 dark:hover:text-white hover:text-black text-gray-700">
        <a
          href={url}
          target='_blank'>{title}
        </a>
      </li>
      ))}
      <ThemeIcon />
    </ul>
  </nav>
</header>
