---
import type { Image, Contents } from '../../utils/utils.ts'
import CertificateImages from './CertificateImages.tsx'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

interface Props {
  title: string
  institution: string
  images: Image
  url?: string
  contents: Contents[]
}

const { title, contents, images, institution, url } = Astro.props
---

<div>
  <CertificateImages
    client:only='react'
    images={images}
    title={title}
    institution={institution}
    url={url}
    contents={contents}
  />
  <div class='flex justify-between py-2'>
    <div class='flex flex-col px-2'>
      <h2 class='mobile-xs:text-base'>{title}</h2>
      <h3 class='mobile-xs:text-sm'>{institution}</h3>
    </div>
    <div class='flex justify-end'>
      <a
        href={url}
        target='_blank'
        class='flex items-center justify-center p-3 sm:gap-2 font-semibold text-sm text-[#0a0a0a] dark:text-[#ffffff] dark:hover:text-[#0a0a0a] dark:hover:bg-white hover:bg-[#111111] hover:text-white rounded-xl transition-colors'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          class='w-7 h-7 mobile-xs:w-5 mobile-xs:h-5'
          viewBox='0 0 24 24'
          stroke-width='2'
          stroke='currentColor'
          fill='none'
          stroke-linecap='round'
          stroke-linejoin='round'
        >
          <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
          <path
            d='M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6'
          ></path>
          <path d='M11 13l9 -9'></path>
          <path d='M15 4h5v5'></path>
        </svg>
      </a>
    </div>
  </div>
</div>
