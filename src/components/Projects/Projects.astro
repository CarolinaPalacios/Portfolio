---
import CardProject from './CardProject.astro';
import { projects } from '../../utils/utils.ts';
---

<section
  class='flex flex-col w-[90%] sm:w-full gap-12 py-16'
>
  <div class='w-1/2 flex flex-col items-center justify-center gap-8'>
    <h1 class='flex flex-initial font-extrabold text-6xl mr-16'>Projects</h1>
  </div>
    <div class='grid gap-y-8 lg:grid-cols-2 place-items-center px-20'>
      {
        projects.map(
          ({
            id,
            title,
            subtitle,
            image,
            video,
            github,
            url,
            technologies,
            description,
          }) => (
            <CardProject
              id={id}
              title={title}
              subtitle={subtitle}
              image={image}
              video={video}
              github={github}
              url={url}
              technologies={technologies}
              description={description}
            />
          ),
        )
      }
    </div>
</section>
